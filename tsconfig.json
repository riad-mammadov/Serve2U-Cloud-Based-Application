{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "baseUrl": "./src",
        "removeComments": true,
        "incremental": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/public/index.js",
        "**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}